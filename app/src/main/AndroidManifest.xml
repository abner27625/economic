<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abner.economic">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.KLine.ui.MainActivity"/>
        <activity android:name=".module.KLine.ui.KLineActivity"/>
        <activity android:name=".module.media.MediaActivity"/>
        <activity android:name=".module.loginAndregister.LoginAndRegisterActivity"/>
        <activity android:name=".module.discover.pointhistory.PointHistoryActivity"/>
        <activity android:name=".module.recharge.RechargeActivity"/>
        <activity android:name=".module.withdraw.WithdrawActivity"/>
        <activity android:name=".module.withdraw.BankInfoActivity"/>

    </application>

</manifest>