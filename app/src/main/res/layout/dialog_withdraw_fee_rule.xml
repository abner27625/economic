            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  1.大于300元的提现金额收取1%的手续费"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  2.提现金额不足300元收取3元手续费"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  3.提现手续费30元封顶"
            android:layout_marginTop="10dp"/>
