<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#584646">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="#008dfe"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_balck"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_background"
        app:tl_indicator_color="#e71d36"
        app:tl_indicator_height="2dp"
        app:tl_indicator_margin_bottom="5dp"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_width="10dp"
        app:tl_textSelectColor="#e71d36"
        app:tl_textUnselectColor="#333333"
        />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/ctl_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>