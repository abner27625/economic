<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_withdraw_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现金额"/>
                <TextView
                    android:id="@+id/tv_withdraw_money_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（可提现 7.00 元 全部提现）"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="￥" />
                <EditText
                    android:id="@+id/et_withdraw_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入提现金额"
                    android:inputType="number"
                    android:textColorHint="#c8c8c8"
                    android:textColor="#333333"
                    android:background="@null"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="提现手续费:"
                        android:gravity="center"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_withdraw_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="  3.0元"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="到账时间:"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="  24小时内到账"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_withdraw_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/question_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bank_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_withdraw_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请选择银行"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_arrow"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />
            <EditText
                android:id="@+id/et_withdraw_bank_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:hint="请输入银行卡号"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:inputType="number"
                android:maxLength="19"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />
            <EditText
                android:id="@+id/et_withdraw_bank_person_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:hint="请输入持卡人姓名"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />
            <RelativeLayout
                android:id="@+id/rl_bank_province"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_withdraw_bank_province"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请选择开卡省份"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_arrow"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />
            <RelativeLayout
                android:id="@+id/rl_bank_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_withdraw_bank_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请选择开卡城市"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_arrow"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />

            <EditText
                android:id="@+id/et_withdraw_subname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:hint="请输入支行名称"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:text="注：请务必确认所填信息的准确，否则会影响正常提现"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="提现"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:letterSpacing="1"
            android:background="@drawable/yuanjiao_button_008dfe"/>
    </RelativeLayout>
</RelativeLayout>